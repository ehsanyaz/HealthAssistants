<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.savar_computer.healthassistants.Weight"
    android:background="@color/background"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/weight_txt_please_enter_weight"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="لطفا وزن خود را وارد کنید"
        android:textSize="20dp"
        android:layout_margin="15dp"
        android:textAlignment="center"
        android:background="@color/DarkBackGround"
        android:textColor="@color/white"
        android:gravity="center"/>
    <EditText
        android:id="@+id/weight_edit_enter_weight"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="12dp"
        android:background="@color/GOSSIP"
        android:inputType="number"
        />
    <Button
        android:id="@+id/weight_btn_accept"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="ثبت"
        android:gravity="center"
        android:layout_margin="10dp"/>

</LinearLayout>
